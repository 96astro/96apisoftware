generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id                  Int                  @id @default(autoincrement())
  name                String?
  username            String?              @unique
  email               String?              @unique
  emailVerified       DateTime?
  image               String?
  phone               String?              @unique
  department          String?
  designation         String?
  language            String?
  bio                 String?              @db.Text
  password            String?
  accounts            Account[]
  sessions            Session[]
  passwordResetTokens PasswordResetToken[]
  lifeCalculatorReports LifeCalculatorReport[]
  ayuMilanReports     AyuMilanReport[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model Account {
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?   @db.Text
  access_token      String?   @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?   @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@index([userId])
}

model Session {
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}

model PasswordResetToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  userId    Int
  expires   DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expires])
}

model LifeCalculatorReport {
  id              Int      @id @default(autoincrement())
  userId          Int
  name            String
  gender          String
  placeOfBirth    String
  birthDate       DateTime
  birthTime       String
  day             Int
  month           Int
  year            Int
  hour            Int
  minute          Int
  second          Int
  longitudeDeg    Int
  longitudeMin    Int
  longitudeDir    String   @db.VarChar(1)
  latitudeDeg     Int
  latitudeMin     Int
  latitudeDir     String   @db.VarChar(1)
  timezone        Float
  chartStyle      String
  kpHoraryNumber  Int
  requestPayload  Json
  responseJson    Json?
  responseRaw     String   @db.LongText
  responseChunks  LifeCalculatorResponseChunk[]
  apiJobId        String?
  apiStatus       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model LifeCalculatorResponseChunk {
  id         Int      @id @default(autoincrement())
  reportId   Int
  chunkIndex Int
  data       String   @db.LongText
  createdAt  DateTime @default(now())

  report LifeCalculatorReport @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, chunkIndex])
  @@index([reportId])
}

model AyuMilanReport {
  id                Int      @id @default(autoincrement())
  userId            Int
  boyName           String
  boyBirthDate      DateTime
  boyBirthTime      String
  boyPlaceOfBirth   String
  boyLatitudeDeg    Int
  boyLatitudeMin    Int
  boyLatitudeDir    String   @db.VarChar(1)
  boyLongitudeDeg   Int
  boyLongitudeMin   Int
  boyLongitudeDir   String   @db.VarChar(1)
  boyTimezone       Float
  girlName          String
  girlBirthDate     DateTime
  girlBirthTime     String
  girlPlaceOfBirth  String
  girlLatitudeDeg   Int
  girlLatitudeMin   Int
  girlLatitudeDir   String   @db.VarChar(1)
  girlLongitudeDeg  Int
  girlLongitudeMin  Int
  girlLongitudeDir  String   @db.VarChar(1)
  girlTimezone      Float
  requestPayload    Json
  responseJson      Json?
  responseRaw       String   @db.LongText
  responseChunks    AyuMilanResponseChunk[]
  apiJobId          String?
  apiStatus         String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
}

model AyuMilanResponseChunk {
  id         Int      @id @default(autoincrement())
  reportId   Int
  chunkIndex Int
  data       String   @db.LongText
  createdAt  DateTime @default(now())

  report AyuMilanReport @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@unique([reportId, chunkIndex])
  @@index([reportId])
}
